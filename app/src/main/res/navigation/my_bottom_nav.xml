<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_bottom_nav"
    app:startDestination="@id/homeIconFragment">

    <fragment
        android:id="@+id/homeIconFragment"
        android:name="com.example.food_app_planner.archistartcode.presentation.homepage.view.HomePageFragment"
        android:label="fragment_home_icon"
        tools:layout="@layout/fragment_home_icon" >
        <action
            android:id="@+id/action_homeIconFragment_to_categoryPageFragment"
            app:destination="@id/categoryPageFragment" />
        <action
            android:id="@+id/action_homeIconFragment_to_mealByIdFragment"
            app:destination="@id/mealByIdFragment" />


    </fragment>


    <fragment
        android:id="@+id/categoryPageFragment"
        android:name="com.example.food_app_planner.archistartcode.presentation.categorypage.view.CategoryPageFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_category_page" >
        <action
            android:id="@+id/action_categoryPageFragment_to_specificCategoryPageFragment"
            app:destination="@id/specificCategoryPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/specificCategoryPageFragment"
        android:name="com.example.food_app_planner.archistartcode.presentation.filterbycategorypage.view.SpecificCategoryPageFragment"
        android:label="Category Details"
        tools:layout="@layout/fragment_specific_category_page" >
        <!-- ✅ أضف الـ action ده -->
        <action
            android:id="@+id/action_specificCategoryPageFragment_to_mealByIdFragment"
            app:destination="@id/mealByIdFragment" />

    </fragment>

    <!-- ✅ أضف الـ MealByIdFragment -->
    <fragment
        android:id="@+id/mealByIdFragment"
        android:name="com.example.food_app_planner.archistartcode.presentation.mealbyid.view.MealByIdFragment"
        android:label="Meal Details"
        tools:layout="@layout/fragment_meal_by_id" />

    <fragment
        android:id="@+id/searchIconFragment"
        android:name="com.example.food_app_planner.archistartcode.SearchIconFragment"
        android:label="fragment_search_icon"
        tools:layout="@layout/fragment_search_icon" />
    <fragment
        android:id="@+id/plannerIconFragment"
        android:name="com.example.food_app_planner.archistartcode.PlannerIconFragment"
        android:label="fragment_planner_icon"
        tools:layout="@layout/fragment_planner_icon" />
    <fragment
        android:id="@+id/favouriteIconFragment"
        android:name="com.example.food_app_planner.archistartcode.FavouriteIconFragment"
        android:label="fragment_favourite_icon"
        tools:layout="@layout/fragment_favourite_icon" />

    <!-- Country Page -->
    <fragment
        android:id="@+id/countrypage"
        android:name="com.example.food_app_planner.archistartcode.presentation.countrypage.view.CountryPageFragment"
        android:label="Countries"
        tools:layout="@layout/fragment_country_page" >
        <action
            android:id="@+id/action_countrypage_to_specificAreaFragment"
            app:destination="@id/specificAreaFragment" />
    </fragment>

    <fragment
        android:id="@+id/specificAreaFragment"
        android:name="com.example.food_app_planner.archistartcode.presentation.specificarea.view.SpecificAreaFragment"
        android:label="Area Details"
        tools:layout="@layout/fragment_specific_area"
        >
        <action
            android:id="@+id/action_specificAreaFragment_to_mealByIdFragment"
            app:destination="@id/mealByIdFragment" />
    </fragment>
</navigation>